{% extends '_layouts/_global-variables' %}

{% block htmlPage %}
  <!DOCTYPE html>
  <html lang="{{ craft.app.language|slice(0, 2) }}">
    <head>
      {# {% cache for 4 weeks %} #}
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta charset="UTF-8" />
      <meta name="viewport"
        content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
      <meta name="referrer" content="origin-when-cross-origin" />

      {% block customMetaTag %}{% endblock %}

      {% include 'quarks/_favicon' %}
      {% include 'quarks/_load-css' %}

      {# {% endcache %} #}
    </head>
    <body>
      {% block header %}
        {% include 'components/header' -%}
      {% endblock %}

      {% block main -%}
        <main>
          {% block MastHead %}
            {% set mastHead = entry.masthead.one() ?? category.masthead.one()
              ?? null
            %}
            {% if mastHead %}
              {% include 'components/mastHead' with {
                mastHead: mastHead
              } %}
            {% endif %}
          {% endblock %}

          {% block content %}{% endblock %}
        </main>
      {% endblock %}

      {% block modals -%}{% endblock %}

      {# {% cache for 4 weeks %} #}

      {% block sideBar %}
        {% include 'components/sideBar' -%}
      {% endblock %}

      {% block footer %}
        {% include 'components/footer' -%}
      {% endblock %}

      {% include 'quarks/_load-js' -%}
      {# {% endcache %} #}
    </body>
  </html>
{% endblock %}
