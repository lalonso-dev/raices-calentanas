{# -- SETTINGS LOAD ASSETS -- #}
{% set loadAssets = loadAssets ?? true %}

{# -- SETTINGS SWIPER -- #}
{% set loadSwiper = loadSwiper ?? false %}
{% set loadSwiperAsyncJs = loadSwiperAsyncJs ?? false %}
{% set positionSwiper = positionSwiper ?? 'HEAD' %}

{% block swiper %}
  {% if loadSwiper %}
    {% css '/assets/css/swiper-bundle.min.css' %}
    {{
      injectJs({
        path: '/assets/js/swiper-bundle.min.js',
        position: positionSwiper,
        options: {
          async: loadSwiperAsyncJs
        }
      })
    }}
  {% endif %}
{% endblock %}

