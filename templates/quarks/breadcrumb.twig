{% set breadcrumb = breadcrumb ?? craft.breadcrumb.config %}

{% if breadcrumb %}
  <div class="c-breadcrumb">
    <ul
      class="px-0 mx-0 c-breadcrumb__items not-list-bullets d-flex aling-items-center justify-content-start flex-wrap my-1 py-2"
    >
      {% for crumb in breadcrumb %}
        {% if loop.last %}
          <li class="c-breadcrumb__item active">
            <span>{{ crumb.title }}</span>
          </li>
        {% else %}
          <li class="c-breadcrumb__item">
            <a class="c-breadcrumb__link" href="{{ crumb.url }}">
              <span>{{ crumb.title }}</span>
              <span class="d-inline-block mx-1">/</span>
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
{% endif %}
